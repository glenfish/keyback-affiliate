<!-- Modal -->
<div id="myModal" class="fixed inset-0 flex items-center justify-center hidden" style="z-index:100000000000000000">
  <div class="modal-overlay absolute w-full h-full bg-gray-900 opacity-90"></div>

  <div
    class="modal-container bg-white w-10/12 md:max-w-md mx-auto rounded shadow-lg z-50 overflow-y-auto overflow-x-hidden"
  >
    <div id="closeModal" class="cursor-pointer p-4 float-right">
      <svg
        class="fill-current text-black"
        xmlns="http://www.w3.org/2000/svg"
        width="30"
        height="30"
        viewBox="0 0 25 25"
      >
        <path
          d="M1.293 1.293a1 1 0 0 1 1.414 0L9 7.586l6.293-6.293a1 1 0 1 1 1.414 1.414L10.414 9l6.293 6.293a1 1 0 1 1-1.414 1.414L9 10.414l-6.293 6.293a1 1 0 1 1-1.414-1.414L7.586 9 1.293 2.707a1 1 0 0 1 0-1.414z"
        ></path>
      </svg>
    </div>
    <!-- Add your modal content here -->
    <div class="modal-content py-6 text-left px-6">
      <p class="text-2xl font-bold pb-4 px-1 tracking-tighter">DON'T WAIT.</p>
      <div class="flex justify-between items-center pb-3">
        <p class="text-2xl font-bold pb-4 px-1 tracking-tighter">Grab your free Keyback account!</p>
        <p class="text-md font-bold pb-4 px-1 tracking-tighter">This deal won't last. Lock it in today.</p>
      </div>
      <div class="w-full">
        <a
          href="https://clients.keyback.io/registration"
          target="_blank"
          class="bg-primary hover:bg-blue-500 text-white font-bold my-2 py-4 px-4 rounded mx-auto block text-xl text-center"
        >
          Lock In My Discount Now
        </a>
      </div>
    </div>
  </div>
</div>

<script is:inline>
  // Open the modal when the "Sign Up for Free" button is clicked
  document.getElementById('openModal').addEventListener('click', function () {
    document.getElementById('myModal').classList.remove('hidden');
  });

  // Close the modal when the close button or overlay is clicked
  document.getElementById('closeModal').addEventListener('click', function () {
    document.getElementById('myModal').classList.add('hidden');
  });

  // Close the modal when the Escape key is pressed
  document.addEventListener('keydown', function (event) {
    if (event.key === 'Escape') {
      document.getElementById('myModal').classList.add('hidden');
    }
  });
</script>
