---
import { Icon } from 'astro-icon';

interface CallToAction {
  text: string;
  href: string;
  icon?: string;
}

export interface Props {
  title?: string;
  description?: string;
  callToAction?: string | CallToAction;
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  callToAction = await Astro.slots.render('callToAction'),
} = Astro.props;
---

<section class="relative bg-[#efefef] dark:bg-slate-900">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 dark:bg-slate-900">
    <div class="py-12 md:py-20">
      <div
        class="max-w-3xl mx-auto text-center p-10 rounded-md shadow-xl dark:shadow-none dark:border dark:border-slate-600 dark:text-white bg-white dark:bg-slate-600"
      >
        <span class="text-5xl" style="margin-bottom: 20px!important;">Congratulations!</span>
        <p class="p-10 text-xl">
          You have joined Keyback and are now one step closer to securing your crypto wealth for yourself and your
          family. We'd like to welcome you to the Keyback family.
        </p>
      </div>
    </div>
  </div>
</section>
